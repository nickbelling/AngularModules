{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": ".",
	"projects": {
		"@my-project/main": {
			"projectType": "application",
			"schematics": {
				"@schematics/angular:component": {
					"style": "scss"
				}
			},
			"root": "main",
			"sourceRoot": "main/src",
			"prefix": "app",
			"architect": {
				"build": {
					"builder": "@angular-architects/native-federation:build",
					"options": {},
					"configurations": {
						"production": {
							"target": "@my-project/main:esbuild:production"
						},
						"development": {
							"target": "@my-project/main:esbuild:development",
							"dev": true
						}
					},
					"defaultConfiguration": "production"
				},
				"serve": {
					"builder": "@angular-architects/native-federation:build",
					"options": {
						"target": "@my-project/main:serve-original:development",
						"rebuildDelay": 0,
						"dev": true,
						"port": 0
					}
				},
				"extract-i18n": {
					"builder": "@angular-devkit/build-angular:extract-i18n",
					"options": {
						"buildTarget": "main:build"
					}
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"polyfills": [
							"zone.js",
							"zone.js/testing"
						],
						"tsConfig": "main/tsconfig.spec.json",
						"inlineStyleLanguage": "scss",
						"assets": [
							"main/src/favicon.ico",
							"main/src/assets"
						],
						"styles": [
							"main/src/styles.scss"
						],
						"scripts": []
					}
				},
				"esbuild": {
					"builder": "@angular-devkit/build-angular:application",
					"options": {
						"outputPath": "dist/@my-project/main",
						"index": "main/src/index.html",
						"browser": "main/src/main.ts",
						"polyfills": [
							"zone.js"
							//"es-module-shims"
						],
						"tsConfig": "main/tsconfig.app.json",
						"inlineStyleLanguage": "scss",
						"assets": [
							"main/src/favicon.ico",
							"main/src/assets",
							{
								// COPY PLUGIN TO /assets FOR EASE OF DEV.
								"glob": "**/*",
								"input": "../plugin/plugin/dist/plugin/browser",
								"output": "assets/plugin/"
							}
						],
						"styles": [
							"main/src/styles.scss"
						],
						"scripts": []
					},
					"configurations": {
						"production": {
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "2mb",
									"maximumError": "5mb"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "6kb",
									"maximumError": "10kb"
								}
							],
							"outputHashing": "all"
						},
						"development": {
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true
						}
					},
					"defaultConfiguration": "production"
				},
				"serve-original": {
					"builder": "@angular-devkit/build-angular:dev-server",
					"configurations": {
						"production": {
							"buildTarget": "@my-project/main:esbuild:production"
						},
						"development": {
							"buildTarget": "@my-project/main:esbuild:development"
						}
					},
					"defaultConfiguration": "development",
					"options": {
						"port": 4200
					}
				}
			}
		},
		"@my-project/shared": {
			"projectType": "library",
			"root": "shared",
			"sourceRoot": "shared/src",
			"prefix": "lib",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-angular:ng-packagr",
					"options": {
						"project": "shared/ng-package.json"
					},
					"configurations": {
						"production": {
							"tsConfig": "shared/tsconfig.lib.prod.json"
						},
						"development": {
							"tsConfig": "shared/tsconfig.lib.json"
						}
					},
					"defaultConfiguration": "production"
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"tsConfig": "shared/tsconfig.spec.json",
						"polyfills": [
							"zone.js",
							"zone.js/testing"
						]
					}
				}
			}
		}
	}
}